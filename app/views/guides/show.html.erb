<div class="wrap">
  <button onclick="goBack()"><img class="go_back" src="<%=asset_path 'go_back.png' %>" alt="뒤로가기" /></button>
  <!-- <a href="/sales" onclick="goBack()"><img class="go_back" src="<%=asset_path 'go_back.png' %>" alt="뒤로가기" /></a> -->
  <script>
  function goBack() {
    window.history.back();
  }
</script>
  <div class="show-container clearfix">
    <div class="show-image-box">
      <div class="yes-background">
       <img src="<%= @guide.gui_spare_01 %>">
      </div>
    </div>
    <div class="inner">
      <% if @guide.gui_source.present? %><span>by <%= @guide.gui_source %></span><% end %>
      <p class="title"><%= @guide.gui_title %></p>

      <div class="pricing">
        <span class="is"><%= number_to_currency(@guide.gui_is_price, locale: :kr) %>원</span>
        <% if @guide.gui_was_price.present? %>
          <span class="was"><%= number_to_currency(@guide.gui_was_price, locale: :kr) %>원</span>
          <% final_pct = 0 %>
          <% final_pct =  (@guide.gui_was_price - @guide.gui_is_price) / @guide.gui_was_price * 100 %>
          <span class="pct">( <%= number_to_percentage(final_pct, precision: 0) %> OFF )</span>
        <% end %>
        <% if current_user && current_user.admin %>
          <% if @guide.gui_source.present? %>
            <span class="bycou">by <%= @guide.gui_source %></span>
          <% else %>
            <span class="bycou">by 쿠팡</span>
          <% end %>
        <% end %>
      </div>            

      <div class="spec clearfix">
        <div class="boxes common">
          <div class="box">
            <p>평  점</p>
            <% if @guide.gui_spare_02.present? %>
              <span><%= @guide.gui_spare_02 %> / 5.0</span>

            <% else %>
              <span>-</span>
            <% end %>
          </div>
          <div class="box">
            <p>리뷰 수</p>
            <% if @guide.gui_spare_03.present? %>
              <span><%= @guide.gui_spare_03 %>개 +</span>
            <% else %>
              <span>-</span>
            <% end %>
          </div>
          <% if @guide.gui_spare_04.present? %>
          <% else %>
            <div class="box">
              <p>로켓 배송</p>
              <% if @guide.gui_spare_04.present? %>
                <span><%= @guide.gui_spare_04 %></span>
              <% else %>
                <span>NO</span>
              <% end %>
            </div>
          <% end %>
        </div>
        <!-- <p>별 5개: 매우좋음, 별 4~4.5개: 좋음, 별 3~3.5: 보통, 별 3개 미만: 나쁨</p> -->
      </div>

      <% if current_user && current_user.admin %>
        <div class="hashtag"><p><%= render_with_guihashtags(@guide.gui_link.to_s) %></p></div>
      <% end %>

      <% if @guide.gui_source.present? %>
        <div class="show-btn pc-ver"><a target="_blank" href="<%= @guide.gui_spare_05 %>"><%= @guide.gui_source %> 최저가 확인하기</a></div>
      <% else %>
        <div class="show-btn pc-ver"><a target="_blank" href="<%= @guide.gui_spare_05 %>">쿠팡 최저가 확인하기 </a></div>
      <% end %>
      
      <!-- <div class="sharing">
        <div class="addthis_inline_share_toolbox_9x2f"></div>
      </div> -->
      
    </div>
    <% if @guide.gui_source.present? %>
      <div class="show-btn mobile"><a target="_blank" href="<%= @guide.gui_spare_05 %>"><%= @guide.gui_source %> 최저가 확인하기</a></div>
    <% else %>
      <div class="show-btn mobile"><a target="_blank" href="<%= @guide.gui_spare_05 %>">쿠팡 최저가 확인하기</a></div>
    <% end %>


    <% if current_user && current_user.admin %>
      <div class="admin">
        <%= link_to 'Back', guides_path %> | 
        <%= link_to 'Edit', edit_guide_path(@guide) %> |
        <%= link_to 'Destroy', @guide, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

  </div>

</div>


