
<%= simple_form_for(@featured) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :ftitle %>
    <%= f.input :furl %>
    <%= f.input :fimage %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
