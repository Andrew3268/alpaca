<div class="wrap">


  <div class="sales-categories clearfix">
    <div class="ctg clearfix">
      <ul>
        <% Scategory.all.each do |sct| %>
          <li><%= link_to sct.name, sales_path(scategory: sct.name) %></li>
        <% end %>
