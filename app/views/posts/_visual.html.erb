<div class="visual clearfix">
  <div class="main-title">
    <h2>Discover The AWESOME Design</h2>
    <span>Curated by thinking defferently.</span>
    <br>
    <% if current_user && current_user.admin %>
      <div class="admin">
        <%= link_to 'New Post', new_post_path %> | 
        <%= link_to "New Category", new_category_path %> | 
        <%= link_to 'Sing Out', destroy_user_session_path, method: :delete %>
      </div>
    <% end %>
  </div>

  <%= form_for "",url: posts_path, role: "search", method: :get do %>
    <%= text_field_tag :search, @search_term, placeholder: "Search....." %>
  <% end %>

  <div class="category-pc">
    <ul class="clearfix">
      <li><a class="btn" href="/">Everything</a></li>
      <% Category.where(display_in_navbar: true).each do |cat | %>
        <li><%= link_to cat.name, posts_path(category: cat.name), class: "btn" %></li>
      <% end %>
    </ul>
  </div>
  <div class="category-mobile">
    <ul class="clearfix">
      <li><a class="btn-m" href="/"><img src="<%=asset_path 'star.png' %>" alt="뒤로가기" />Everything</a></li>
      <li><a class="btn-m" href="/posts?category=Electronic"><img src="<%=asset_path 'star.png' %>" alt="뒤로가기" />Electronic</a></li>
      <li><a class="btn-m" href="/posts?category=Home"><img src="<%=asset_path 'star.png' %>" alt="뒤로가기" />Home</a></li>
      <li><a class="btn-m" href="/posts?category=Kitchen"><img src="<%=asset_path 'star.png' %>" alt="뒤로가기" />Kitchen</a></li>
      <li><a class="btn-m" href="/posts?category=Beauty"><img src="<%=asset_path 'star.png' %>" alt="뒤로가기" />Beauty</a></li>
      <li><a class="btn-m" href="/posts?category=Sports+%26+Outdoors"><img src="<%=asset_path 'star.png' %>" alt="뒤로가기" />Sports & Outdoor</a></li>
    </ul>
  </div>

</div>