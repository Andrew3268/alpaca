<header>

  <!-- <%= render 'posts/slider' %> -->

  <div class="visual clearfix">

    <div class="main-title">
      
      <div class="visual-banner">
        <img src="<%=asset_path 'banner-gift.png' %>">
      </div>
      <div class="visual-banner-m">
        <img src="<%=asset_path 'banner-gift-m.png' %>">
      </div>

      <% if current_user && current_user.admin %>
        <div class="admin clearfix">
          <%= link_to 'New Post', new_post_path %> | 
          <%= link_to "New Category", new_category_path %> | 
          <%= link_to 'Sing Out', destroy_user_session_path, method: :delete %>
        </div>
      <% end %>
    </div><!--./main-title-->

    <%= form_for "",url: posts_path, role: "search", method: :get do %>
      <%= text_field_tag :search, @search_term, placeholder: "Search....." %>
    <% end %>

    <div class="ctg-common category-pc">
      <ul class="ctg-ul">
        <li><a class="btn" href="/">Everything</a></li>
        <% Category.where(display_in_navbar: true).each do |cat | %>
          <li><%= link_to cat.name, posts_path(category: cat.name), class: "btn" %></li>
        <% end %>
      </ul>
    </div>

    <div class="category-mobile">
      <ul class="clearfix">
        <li><a class="btn-m" href="/">Everything</a></li>
        <% Category.where(display_in_navbar: true).each do |cat | %>
          <li><%= link_to cat.name, posts_path(category: cat.name), class: "btn-m" %></li>
        <% end %>
      </ul>
    </div>

    
    
  </div><!--./visual-->
  
</header>



